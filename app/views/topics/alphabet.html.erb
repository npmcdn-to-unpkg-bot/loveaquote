<% content_for :title, "Topics by Alphabet #{@alphabet}" %>
<% content_for :canonical, "#{alphabet_topics_url(@alphabet, format: :html)}" %>

<% content_for :content do %>
  <div class="col-xs-12">
    <h1 class="main-title text-center"><%= "Topics by Alphabet #{@alphabet}" %></h1>
    <div class="row">
      <% @topics.each do |topic| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
          <%= link_to topic.name + " Quotes", topic_url(topic, format: :html), title: topic.name + " Quotes", class: "link-box text-center" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :additional_tags do %>
  <meta name="robots" content="noindex,follow">
<% end %>
