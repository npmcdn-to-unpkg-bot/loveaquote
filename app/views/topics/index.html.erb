<% content_for :title, "Quote Topics - Read quotes by topic" %>
<% content_for :title, "Quote Topics - Read quotes by topic" %>
<% content_for :description, "Quote Topics - Read quotes by topic" %>
<% content_for :canonical, topics_url %>

<% content_for :heading, "Topics" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @topics.each do |letter, topics| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @topics.each do |letter, topics| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row small-up-1 medium-up-2 large-up-3">
        <% topics.each do |topic| %>
          <div class="column text-center">
            <div class="more-link">
              <%= link_to topic.name, topic_url(topic), title: topic.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="more-link">
        <%= link_to "More ...", alphabet_topics_url(letter.upcase) %>
      </div>
    </div>
  <% end %>


<% end %>