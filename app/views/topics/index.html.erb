<% content_for :title, "Quote Topics - Read quotes by topic" %>
<% content_for :title, "Quote Topics - Read quotes by topic" %>
<% content_for :description, "Quote Topics - Read quotes by topic" %>
<% content_for :canonical, topics_url %>

<% content_for :heading, "Topics" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @topics.each do |letter, topics| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @topics.each do |letter, topics| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <% first = topics.count / 3 + topics.count % 3 %>
      <% second = first + topics.count / 3 %>
      <% third =  second + topics.count / 3 %>
      <div class="row">
        <div class="col-md-4">
          <ul>
            <% ( 1..first ).each do |count| %>
              <li><%= link_to topics[count-1].name, topic_url(topics[count-1]), title: topics[count-1].name + " Quotes" %></li>
            <% end %>
          </ul>
        </div>
        <div class="col-md-4">
          <ul>
            <% ( ( first + 1 )..second ).each do |count| %>
              <li><%= link_to topics[count-1].name, topic_url(topics[count-1]), title: topics[count-1].name + " Quotes" %></li>
            <% end %>
          </ul>
        </div>
        <div class="col-md-4">
          <ul>
            <% ( ( second+1 )..third ).each do |count| %>
              <li><%= link_to topics[count-1].name, topic_url(topics[count-1]), title: topics[count-1].name + " Quotes" %></li>
            <% end %>
          </ul>
        </div>

        <div class="col-md-12">
          <ul>
            <li><%= link_to "More ...", alphabet_topics_url(letter.upcase) %></li>
          </ul>
        </div>

      </div>
    </div>
  <% end %>


<% end %>