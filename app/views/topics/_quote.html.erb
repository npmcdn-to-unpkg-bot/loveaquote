<li>
    <div class="quote">

      <div class="quote-text">
        <p itemprop="itemListElement"><%= quote.text %></p>
      </div>

      <div class="quote-meta">

        <div class="quote-info">
          <% if quote.source_type == "Author" %>
            <% quote_author = Author.find(quote.source_id) %>
            <% if quote_author.published %>
              <%= link_to quote_author.name, author_url(quote_author) %>
            <% else %>
              <span>quote_author.name</span>
            <% end %>
          <% elsif quote.source_type == "Book"  %>
            <% quote_book = Book.find(quote.source_id) %>
            <% if quote_book.published %>
              <%= link_to quote_book.name, book_url(quote_book) %>
            <% else %>
              <span>quote_book.name</span>
            <% end %>          
          <% end %>
        </div>

        <div class="social-sharing">
          <a rel="nofollow" class="share-twitter" title="Share this quote on Twitter" target="_blank" href="https://twitter.com/intent/tweet?text=<%= CGI::escape(quote.text) %>&amp;url=<%= URI.encode(topics_url(@topic)) %>&amp;via=_LoveAQuote_"><i class="fa fa-twitter-square fa-lg"></i></a>
          <a rel="nofollow" class="share-facebook" title="Share this quote on Facebook" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=<%= URI.encode(topics_url( @topic)) %>"><i class="fa fa-facebook-square fa-lg"></i></a>
        </div>

      </div>

    </div>
</li>