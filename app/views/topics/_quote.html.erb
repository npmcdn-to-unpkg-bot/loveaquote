<li>
    <div class="quote">

      <div class="quote-text">
        <p itemprop="itemListElement"><%= quote.text %></p>
      </div>

      <div class="quote-meta">

        <div class="quote-info">
          <% if quote.source_type == "Author" %>
            <% quote_author = Author.find(quote.source_id) %>
            <% if quote_author.published %>
              <%= link_to quote_author.name, author_url(quote_author) %>
            <% else %>
              <span>quote_author.name</span>
            <% end %>
          <% elsif quote.source_type == "Book"  %>
            <% quote_book = Book.find(quote.source_id) %>
            <% if quote_book.published %>
              <%= link_to quote_book.name, book_url(quote_book) %>
            <% else %>
              <span>quote_book.name</span>
            <% end %>          
          <% end %>
        </div>

        <div class="social-sharing">
          <a rel="nofollow" class="share-twitter" title="Share this quote on Twitter" target="_blank" href="<%= twitter_quote_url(quote) %>"><i class="fa fa-twitter-square fa-lg"></i></a>
          <a rel="nofollow" class="share-facebook" title="Share this quote on Facebook" target="_blank" href="<%= facebook_quote_url(quote) %>"><i class="fa fa-facebook-square fa-lg"></i></a>
          <% if quote.source.image.present? %>
            <a rel="nofollow" class="share-pinterest" title="Share this quote on Pinterest" target="_blank" href="<%= pinterest_quote_url(quote) %>"><i class="fa fa-pinterest-square fa-lg"></i></a>
          <% end %>
        </div>

      </div>

    </div>
</li>