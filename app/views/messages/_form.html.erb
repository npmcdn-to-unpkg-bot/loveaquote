<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :subject %>
    <%= f.input :content, input_html: {rows: 5} %>
  </div>

  <div class="form-actions">
    <%= f.submit "Send Message", class: "btn btn-default" %>
  </div>
<% end %>
