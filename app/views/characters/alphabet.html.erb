<% content_for :title, "Characters by Alphabet #{@alphabet}" %>
<% content_for :canonical, "#{alphabet_characters_url(@alphabet)}" %>

<% content_for :content do %>
  <div class="col-xs-12">
    <h1 class="main-title text-center"><%= "Characters by Alphabet #{@alphabet}" %></h1>
    <div class="row">
      <% @characters.each do |character| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
          <%= link_to character.name + " Quotes", character_url(character), title: character.name + " Quotes", class: "link-box text-center" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :additional_tags do %>
  <meta name="robots" content="noindex,follow">
<% end %>