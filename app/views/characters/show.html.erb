<% if params.has_key?(:page) %>
  <% content_for :canonical, "#{canonical_url(@character, params[:page], format: :html)}" %>
  <% content_for :title, "#{@character.name} Quotes - #{@character.quotes.count.to_s} quotes - Page #{params[:page]}" %>
  <% content_for :description, "Quotes from #{@character.name} - page #{params[:page]}. Best collection of #{@character.name} quotes. Read, comment and share these quotes." %>
<% else %>
  <% content_for :canonical, "#{canonical_url(@character, format: :html)}" %>
  <% content_for :title, "#{@character.name} Quotes - #{@character.quotes.count.to_s} quotes" %>
  <% content_for :description, "Quotes from #{@character.name}. Best collection of #{@character.name} quotes. Read, comment and share these quotes." %>
<% end %>

<% content_for :heading, "#{@character.name} Quotes" %>

<% if @character.social_image.present? %>
  <% content_for :facebook_image, @character.social_image.facebook %>
<% end %>

<% content_for :breadcrumbs do %>
	<ol class="breadcrumb">
    <li><a href="<%= root_url %>">Home</a></li>
    <li><a href="<%= characters_url(format: :html) %>">Characters</a></li>
    <li><%= @character.name + " Quotes" %></li>
  </ol>
<% end %>

<% content_for :content do %>
  <% @quotes.each do |quote| %>
    <%= render partial: "characters/quote", object: quote %>
  <% end %>

  <div class="text-center">
    <%= paginate @quotes, :views_prefix => 'kaminari_bootstrap' %>
  </div>
<% end %>

<% content_for :updated do %>
  Last Updated - <time itemprop="dateModified" datetime="<%= @character.updated_at.to_datetime %>"><%= @character.updated_at.to_datetime.strftime("%B %d, %Y")  %></time>
<% end %>

<% content_for :top_social_bar do %>
  <%= render partial: "partials/top_social_bar", locals: {model: @character} %>
<% end %>