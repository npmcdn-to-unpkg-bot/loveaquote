<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Characters" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @characters.each do |letter, characters| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @characters.each do |letter, characters| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row">
        <% characters.each do |character| %>
          <div class="col-xs-1 col-sm-1 col-md-6 col-lg-6">
            <div class="more-link text-center">
              <%= link_to character.name + " Quotes", character_url(character, format: :html), title: character.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More ...", alphabet_characters_url(letter.upcase) %>
      </div>
    </div>
  <% end %>

<% end %>

<% content_for :additional_tags do %>
  <meta name="robots" content="noindex,follow">
<% end %>