<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Characters" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @characters.each do |letter, characters| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @characters.each do |letter, characters| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row small-up-1 medium-up-2 large-up-3">
        <% characters.each do |character| %>
          <div class="column text-center">
            <div class="more-link">
              <%= link_to character.name, character_url(character), title: character.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="more-link">
        <%= link_to "More ...", alphabet_characters_url(letter.upcase) %>
      </div>
    </div>  
  <% end %>

<% end %>