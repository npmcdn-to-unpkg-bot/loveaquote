<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-9">
      <div class="row">
        <div class="col-sm-9">
          <h2 style="margin-top: 0px">People <%= link_to "add new", new_admin_person_url, class: "btn btn-default btn-sm" %></h2>
        </div>
        <div class="col-sm-3" style="margin-bottom: 10px;">
          <%= form_tag "", method: :get do %>
            <%= select_tag "status", options_for_select(["Draft", "Published"], params[:status]), prompt: "Filter by Status", onchange: "this.form.submit()", class: "form-control" %>
          <% end %>          
        </div>
      </div>

      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th width="10%" class="text-center">Image</th>
            <th width="60%" class="text-center">Name</th>
            <th width="10%" class="text-center">Status</th>
            <th width="30%" class="text-center" colspan="3">Manage</th>
          </tr>
        </thead>
      
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td class="text-center" ><%= person.image.present? ? (image_tag person.image_url(:tiny)) : (image_tag "http://placehold.it/50x50") %></td>
              <td style="vertical-align: middle"><%= person.name %></td>
              <td class="text-center"><%= person.published? ? "Published" : "Draft" %></td>
              <td class="text-center" style="vertical-align: middle"><%= link_to 'Show', admin_person_url(person), class: "btn btn-primary btn-xs" %></td>
              <td class="text-center" style="vertical-align: middle"><%= link_to 'Edit', edit_admin_person_url(person), class: "btn btn-blue btn-xs" %></td>
              <td class="text-center" style="vertical-align: middle"><%= link_to 'Destroy', admin_person_url(person) , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-red btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="text-center">
        <%= paginate @people %>
      </div>
    </div>
    
    <div class="col-sm-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="panel-title">
            Recently Added
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-hover">
            <tbody>
              <% Person.order(created_at: :DESC).limit(25).each do |person| %>
                <tr>
                  <td><%= person.name %></td>
                  <td class="text-center"><%= link_to "View", admin_person_url(person) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>