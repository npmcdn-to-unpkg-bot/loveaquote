<div class="col-sm-12">

  <h2>People <%= link_to "add new", new_admin_person_url, class: "btn btn-default btn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="10%" class="text-center">Image</th>
        <th width="60%" class="text-center">Name</th>
        <th width="30%" class="text-center" colspan="3">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td class="text-center" ><%= person.image.present? ? (image_tag person.image_url(:tiny)) : (image_tag "http://placehold.it/50x50") %></td>
          <td style="vertical-align: middle"><%= person.name %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to 'Show', admin_person_url(person), class: "btn btn-primary btn-xs" %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to 'Edit', edit_admin_person_url(person), class: "btn btn-blue btn-xs" %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to 'Destroy', admin_person_url(person) , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-red btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="text-center">
    <%= paginate @people %>
  </div>
</div>