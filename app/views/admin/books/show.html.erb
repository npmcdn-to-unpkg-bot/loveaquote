<div class="col-sm-12">
  <h2><%= @book.name %> <%= link_to "books", admin_books_url, class: "btn btn-default dtn-sm" %> <%= link_to "edit", edit_admin_book_url(@book), class: "btn btn-default dtn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="70%" class="text-center">Quote</th>
        <th width="30%" class="text-center" colspan="2">Manage</th>
      </tr>
    </thead>
  
    <tbody>
        <% @book.quotes.order(text: :ASC).each do |quote| %>
            <tr>
                <td><%= quote.text %></td>
                <td class="text-center">Edit</td>
                <td class="text-center">Delete</td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>