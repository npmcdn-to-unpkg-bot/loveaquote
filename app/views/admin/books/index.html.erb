<div class="col-sm-12">
  <h2>Books <%= link_to "add new", new_admin_book_url, class: "btn btn-default btn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="10%" class="text-center">Image</th>
        <th width="40%" class="text-center">Name</th>
        <th width="20%" class="text-center">Author</th>
        <th width="30%" class="text-center" colspan="3">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="text-center"><%= book.image.present? ? (image_tag book.image_url(:tiny)) : (image_tag "http://placehold.it/50x50") %></td>
          <td style="vertical-align: middle"><%= book.name %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to book.author.name, admin_author_url(book.author) %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to 'Show', admin_book_url(book), class: "btn btn-primary btn-xs" %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to 'Edit', edit_admin_book_url(book), class: "btn btn-blue btn-xs" %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to 'Destroy', admin_book_url(book) , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-red btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  
  <div class="text-center">
    <%= paginate @books %>
  </div>
</div>