<div class="col-sm-12">
  <ol class="breadcrumb bc-3">
    <li><%= link_to "Home", admin_root_url %></li>
    <li><%= link_to "Tv Shows", admin_tv_shows_url %></li>
    <li class="active"><%= @tv_show.name %></li>
  </ol>

  <div class="row">
    <div class="col-sm-9">

      <div class="row">
        <div class="col-sm-3">
          <% if @tv_show.image.present? %>
            <%= image_tag @tv_show.image_url(:small), class: "thumbnail", style: "margin-bottom: 0px" %>
          <% end %>
        </div>
        <div class="col-sm-9">
          <h2 class="text-right"><%= link_to "view", tv_show_url(@tv_show, format: :html), class: "btn btn-primary btn-sm", target: "_blank" %> <%= link_to "edit", edit_admin_tv_show_url(@tv_show), class: "btn btn-blue btn-sm" %> <%= link_to "new quote", "", class: "btn btn-default btn-sm add_new_quote" %> <%= @tv_show.name %></h2>
          <p class="text-right">Last updated at: <%= @tv_show.updated_at.strftime("%d %b, %Y - %H:%M:%S") %></p>
        </div>
      </div>

      <div class="panel minimal minimal-gray">
        <div class="panel-heading">
          <div class="panel-title">

          </div>
          <div class="panel-options">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#quotes" data-toggle="tab">Quotes</a></li>
              <li><a href="#quote-topic-suggestions" data-toggle="tab">Topic Suggestions</a></li>
              <% if @tv_show.social_image.present? %>
                <li><a href="#social-image" data-toggle="tab">Social Images</a></li>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="panel-body">

          <div class="tab-content">

            <div class="tab-pane active" id="quotes">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <% if @tv_show.characters.any? %>
                    <th width="5%" class="text-center">Verified</th>
                    <th width="55%" class="text-center">Quote</th>
                    <th width="20%" class="text-center">Character</th>
                  <% else %>
                    <th width="5%" class="text-center">Verified</th>
                    <th width="75%" class="text-center">Quote</th>
                  <% end %>
                  <th width="20%" class="text-center" colspan="6">Manage</th>
                </thead>

                <tbody>
                  <% @tv_show.quotes.order(text: :asc).each do |quote| %>
                  <tr>
                    <td class="text-center"><%= quote.season_and_episode.present? ? '<i class="e-icon-check"></i>'.html_safe : '<i class="e-icon-cross"></i>'.html_safe %></td>
                    <td><%= quote.text %></td>
                    <% if @tv_show.characters.any? %>
                      <td><%= link_to quote.character.name, admin_character_path(quote.character) if quote.character.present? %></td>
                    <% end %>
                    <td class="text-center"><%= link_to '<i class="fa fa-picture-o"></i>'.html_safe, image_admin_quote_url(quote), remote: true, "data-type": "json", class: "image-quote" %></td>
                    <td class="text-center"><%= link_to '<i class="fa fa-twitter"></i>'.html_safe, tweetable_admin_quote_url(quote), remote: true, "data-type": "json", class: "tweetable-quote" %></td>
                    <td class="text-center"><%= link_to '<i class="fa fa-calendar"></i>'.html_safe, qotd_admin_quote_url(quote), remote: true, "data-type": "json", class: "qotd-quote" %></td>
                    <td class="text-center"><%= link_to '<i class="fa fa-check"></i>'.html_safe, verify_admin_quote_url(quote), remote: :true, "data-type": "json", class: "verify-quote" %></td>                    
                    <td class="text-center"><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_quote_url(quote), target: "_blank" %></td>
                    <td class="text-center"><%= link_to '<i class="fa fa-times"></i>'.html_safe, admin_quote_url(quote), method: :delete, remote: true, class: "delete-quote" %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <div class="tab-pane" id="quote-topic-suggestions">
              <div class="row">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th width="60%" class="text-center">Quote</th>
                      <th width="20%" class="text-center">Topic</th>
                      <th width="20%" class="text-center" colspan="2">Manage</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @tv_show.quote_topic_suggestions.where(read: false).each do |quote_topic_suggestion| %>
                      <tr>
                        <td><%= quote_topic_suggestion.quote.text %></td>
                        <td class="text-center"><%= quote_topic_suggestion.topic.name %></td>
                        <td class="text-center"><%= link_to "Accept", accept_admin_quote_topic_suggestion_url(id: quote_topic_suggestion.id), class:"accept_suggestion", remote: true %></td>
                        <td class="text-center"><%= link_to "Decline", decline_admin_quote_topic_suggestion_url(id: quote_topic_suggestion.id), class:"decline_suggestion", remote: true %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>

            <% if @tv_show.social_image.present? %>
              <div class="tab-pane" id="social-image">
                <h4>Facebook</h4>
                <%= image_tag @tv_show.social_image.facebook, style: "max-width: 100%" %>

                <h4>Twitter</h4>
                <%= image_tag @tv_show.social_image.twitter, style: "max-width: 100%" %>

                <h4>Google Plus</h4>
                <%= image_tag @tv_show.social_image.google_plus, style: "max-width: 100%" %>

                <h4>Pinterest</h4>
                <%= image_tag @tv_show.social_image.pinterest, style: "max-width: 100%" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-3">
      <%= render partial: "admin/partials/review", locals: {model: @tv_show} %>
      <% if @tv_show.characters.any? %>
        <div class="panel panel-default panel-shadow">
          <div class="panel-heading">
            <div class="panel-title">
              <h4>Characters</h4>
            </div>
          </div>
          <div class="panel-body">
            <ul>
              <% @tv_show.characters.order(name: :ASC).each do |character| %>
                <li><%= link_to character.name, admin_character_path(character) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade in" id="new-quote-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Edit Quote</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for([:admin, Quote.new]) do |f| %>
          <div class="form-inputs">
            <%= f.input :text, input_html: {rows: 5} %>
            <%= f.association :character, collection: @tv_show.characters.order(name: :asc) if @tv_show.characters.any? %>
            <%= f.hidden_field :source_id, value: @tv_show.id %>
            <%= f.hidden_field :source_type, value: @tv_show.class.name %>
          </div>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    $(".accept_suggestion")
    .on("ajax:complete", function(e, data, status, xhr) {
        $(this).closest("tr").remove();
    });

    $(".decline_suggestion")
    .on("ajax:complete", function(e, data, status, xhr) {
        $(this).closest("tr").remove();
    });

    $(".add_new_quote").on("click", function(e) {
      e.preventDefault();
      $("#new-quote-modal").modal('show');
    });
    
    $(".image-quote").on("ajax:complete", function(xhr, status) {
      toastr.success('Image generate started for quote.');
    });  

    $(".delete-quote").on("ajax:complete", function(xhr, status) {
      $(this).closest("tr").remove();
    });
  });
</script>