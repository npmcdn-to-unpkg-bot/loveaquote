<% content_for :content do %>
<div class="col-sm-12">
  
  <h2 style="margin-top: 0px">Color Scheme <%= link_to "add new", new_admin_color_scheme_url, class: "btn btn-default btn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="90%" class="text-center">Color Scheme</th>
        <th width="10%" class="text-center" colspan="2">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @color_schemes.each do |color_scheme| %>
        <tr>
          <td class="text-center" style="color: <%= "##{color_scheme.foreground_color}" %>;background-color: <%= "##{color_scheme.background_color}"%>">Color Scheme</td>
          <td class="text-center" style="vertical-align: middle"><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_color_scheme_url(color_scheme) %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to '<i class="fa fa-times"></i>'.html_safe, admin_color_scheme_url(color_scheme) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>