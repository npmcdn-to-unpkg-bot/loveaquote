<% content_for :content do %>
<div class="col-sm-12">
  <h2 style="margin-top: 0px">Quote Of The Day</h2>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="15%" class="text-center">Date</th>
        <th width="60%" class="text-center">Quote</th>
        <th width="60%" class="text-center">Source</th>
      </tr>
    </thead>
  
    <tbody>
      <% @qotds.each do |qotd| %>
        <tr>
          <td class="text-center"><%= qotd.date %></td>
          <td><%= qotd.quote.text %></td>
          <td class="text-center"><%= link_to qotd.quote.source.name, admin_model_url(qotd.quote.source) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @qotds, :views_prefix => 'kaminari_bootstrap' %>
  </div>
</div>
<% end %>