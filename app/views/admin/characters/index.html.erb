<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-9">
      <div class="row">
        <div class="col-sm-6">
          <h2 style="margin-top: 0px">Character <%= link_to "add new", new_admin_character_url, class: "btn btn-default btn-sm" %></h2>
        </div>
        <div class="col-sm-6" style="margin-bottom: 10px;">
          <%= form_tag "", method: :get, class: "form-inline", style: "float:right" do %>
           <div class="form-group">
            <%= text_field_tag :search, params[:search], class: "form-control" %>
            <%= hidden_field_tag :stauts, params[:status] %>
            <%= submit_tag "Search", class: "btn" %>
            </div>
          <% end %>          
          
          <%= form_tag "", method: :get, style: "width:35%; float:right; padding-right: 10px;" do %>
            <%= select_tag "status", options_for_select(["Draft", "Published"], params[:status]), prompt: "Filter by Status", onchange: "this.form.submit()", class: "form-control" %>
            <%= hidden_field_tag :search, params[:search] %>
          <% end %>          
        </div>
      </div>
  
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th width="40%" class="text-center">Name</th>
            <th width="15%" class="text-center">Status</th>
            <th width="15%" class="text-center" colspan="3">Manage</th>
          </tr>
        </thead>
      
        <tbody>
          <% @characters.each do |character| %>
            <tr>
              <td style="vertical-align: middle"><%= character.name %></td>
              <td class="text-center"><%= character.published? ? "Published" : "Draft" %></td>
              <td class="text-center" style="vertical-align: middle"><%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, admin_character_url(character) %></td>
              <td class="text-center" style="vertical-align: middle"><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_character_url(character) %></td>
              <td class="text-center" style="vertical-align: middle"><%= link_to '<i class="fa fa-times"></i>'.html_safe, admin_character_url(character) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @characters, :views_prefix => 'kaminari_bootstrap' %>
      </div>
    </div>
    
    <div class="col-sm-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="panel-title">
            Recently Added
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-hover">
            <tbody>
              <% Character.order(created_at: :DESC).limit(25).each do |character| %>
                <tr>
                  <td><%= character.name %></td>
                  <td class="text-center"><%= link_to "View", admin_character_url(character) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>