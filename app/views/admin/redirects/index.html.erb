<% content_for :content do %>
<div class="col-sm-12">
  <h2>Redirects <%= link_to "add new", new_admin_redirect_url, class: "btn btn-default btn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="40%" class="text-center">From</th>
        <th width="40%" class="text-center">To</th>
        <th width="20%" class="text-center" colspan="2">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @redirects.each do |redirect| %>
        <tr>
          <td><%= redirect.from %></td>
          <td><%= redirect.to %></td>
          <td class="text-center"><%= link_to 'Edit', edit_admin_redirect_path(redirect) %></td>
          <td class="text-center"><%= link_to 'Destroy', admin_redirect_path(redirect), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>