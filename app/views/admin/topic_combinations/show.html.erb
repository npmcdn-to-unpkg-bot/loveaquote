<div class="col-sm-12">
  <ol class="breadcrumb bc-3">
    <li><%= link_to "Home", admin_root_url %></li>
    <li><%= link_to "Topic Combinations", admin_topic_combinations_url %></li>
    <li class="active"><%= @topic_combination.name + " Quotes" %></li>
  </ol>

  <div class="row">
    <div class="col-sm-9">
      <h2><%= @topic_combination.name %> <%= link_to "view", topics_topic_combination_url(@topic_combination), class: "btn btn-default btn-sm", target: "_blank" %></h2>

      <div class="panel minimal minimal-gray">

        <div class="panel-heading">
          <div class="panel-title">
          </div>
          <div class="panel-options">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#quotes" data-toggle="tab" aria-expanded="true">Quotes</a></li>
              <li class=""><a href="#suggested-quotes" data-toggle="tab" aria-expanded="false">Suggested Quotes</a></li>
            </ul>
          </div>
        </div>
        <div class="panel-body">
          <div class="tab-content">
            <div class="tab-pane active" id="quotes">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th width="70%" class="text-center">Quote</th>
                    <th width="30%" class="text-center" colspan="2">Manage</th>
                  </tr>
                </thead>

                <tbody>
                    <% @topic_combination.quotes.order(text: :ASC).each do |quote| %>
                        <tr>
                            <td><%= quote.text %></td>
                            <td class="text-center">Edit</td>
                            <td class="text-center">Delete</td>
                        </tr>
                    <% end %>
                </tbody>
              </table>
            </div>

            <div class="tab-pane" id="suggested-quotes">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th width="50%" class="text-center">Quote</th>
                    <th width="15%" class="text-center">Topic</th>
                    <th width="20%" class="text-center">Source</th>
                    <th width="15%" class="text-center">Manage</th>
                  </tr>
                </thead>

                <tbody>
                  <% @topic_combination.suggested_quotes.each do |quote_topic_suggestion| %>
                    <tr>
                      <td><%= quote_topic_suggestion.quote.text %></td>
                      <td class="text-center"><%= link_to quote_topic_suggestion.topic.name, admin_topic_url(quote_topic_suggestion.topic) %></td>
                      <td class="text-center"><%= link_to quote_topic_suggestion.quote.source.name, admin_quote_source_url(quote_topic_suggestion.quote) %> <%= quote_topic_suggestion.quote.source.published ? '<span class="badge badge-default">P</span>'.html_safe : '<span class="badge badge-default">D</span>'.html_safe %></td>
                      <td class="text-center"><%= link_to '<i class="e-icon-pencil"></i>'.html_safe, edit_admin_quote_path(id: quote_topic_suggestion.quote_id), target: "_blank" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-3">

    </div>
  </div>
</div>