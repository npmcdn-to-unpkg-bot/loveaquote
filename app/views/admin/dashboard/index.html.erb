<div class="col-sm-6">
  <h3>Recently Published</h3>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="60%" class="text-center">Name</th>
        <th width="10%" class="text-center">Type</th>        
        <th width="30%" class="text-center" colspan="3">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @time_lines.each do |time_line| %>
        <tr>
          <td><%= time_line.item.name %></td>
          <td><%= time_line.item.class %></td>
          <td class="text-center"><%= link_to 'Show', admin_model_url(time_line.item) %></td>
          <td class="text-center"><%= link_to 'Edit', edit_admin_model_url(time_line.item) %></td>
          <td class="text-center"><%= link_to 'Destroy', admin_model_url(time_line.item), method: :delete, data: { confirm: 'Are you sure?' } %></td>     
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

