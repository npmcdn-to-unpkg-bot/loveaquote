<h2><%= @topic.name %> <%= link_to "topics", admin_topics_url, class: "btn btn-default dtn-sm" %></h2>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th width="70%" class="text-center">Quote</th>
      <th width="30%" class="text-center" colspan="2">Manage</th>
    </tr>
  </thead>

  <tbody>
      <% @topic.quotes.order(text: :ASC).each do |quote| %>
          <tr>
              <td><%= quote.text %></td>
              <td class="text-center">Edit</td>
              <td class="text-center">Delete</td>
          </tr>
      <% end %>
  </tbody>
</table>