<% content_for :content do %>
<div class="col-sm-12">
  <ol class="breadcrumb bc-3"> 
    <li><%= link_to "Home", admin_root_url %></li>
    <li><%= link_to "Messages", admin_messages_url %></li> 
    <li class="active"><%= @message.subject %></li>
  </ol>
  
  <h2 style="margin-top: 0px">Message</h2>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="20%" class="text-right">Field</th>    
        <th width="80%">Value</th>    
      </tr>
    </thead>
    
    <tbody>
      <tr>
        <td class="text-right">Name</td>
        <td><%= @message.name %></td>
      </tr>
      
      <tr>
        <td class="text-right">Email</td>
        <td><%= @message.email %></td>
      </tr>
      
      <tr>
        <td class="text-right">Subject</td>
        <td><%= @message.subject %></td>
      </tr>
      
      <tr>
        <td class="text-right">Content</td>
        <td><%= @message.content %></td>
      </tr>    
    </tbody>
  </table>
</div>
<% end %>