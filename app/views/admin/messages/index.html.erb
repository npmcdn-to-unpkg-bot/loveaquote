<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-6">
      <h2 style="margin-top: 0px">Messages</h2>
    </div>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="10%" class="text-center">Date</th>
        <th width="20%" class="text-center">Name</th>
        <th width="20%" class="text-center">Email</th>
        <th width="40%" class="text-center">Subject</th>
        <th width="10%" class="text-center" colspan="3">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td class="text-center"><%= message.created_at.strftime("%B %d, %Y") %></td>
          <td><%= message.name %></td>
          <td><%= message.email %></td>
          <td><%= message.subject %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, admin_message_url(message) %></td>
          <td class="text-center" style="vertical-align: middle"><%= link_to '<i class="fa fa-times"></i>'.html_safe, admin_message_url(message) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="text-center">
    <%= paginate @messages %>
  </div>
</div>