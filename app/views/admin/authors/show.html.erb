<div class="col-sm-12">
  <h2><%= @author.name %> <%= link_to "authors", admin_authors_url, class: "btn btn-default dtn-sm" %> <%= link_to "books", edit_admin_author_url(@author), class: "btn btn-default dtn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="70%" class="text-center">Quote</th>
        <th width="30%" class="text-center" colspan="2">Manage</th>
      </tr>
    </thead>
  
    <tbody>
        <% @author.quotes.order(text: :ASC).each do |quote| %>
            <tr>
                <td><%= quote.text %></td>
                <td class="text-center">Edit</td>
                <td class="text-center">Delete</td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>