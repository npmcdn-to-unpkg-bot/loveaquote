<% content_for :content do %>
<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-6">
      <h2 style="margin-top: 0px">Users</h2>
    </div>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="10%" class="text-center">Date</th> 
        <th width="20%" class="text-center">Image</th>
        <th width="20%" class="text-center">Name</th>
        <th width="20%" class="text-center">Email</th>
        <th width="20%" class="text-center">Region</th>
        <th width="10%" class="text-center">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="text-center"><%= user.created_at.strftime("%B %d, %Y") %></td>
          <td class="text-center"><%= image_tag user.image, width: "50" %></td>
          <td class="text-center"><%= link_to user.name, user.profile, target: "_blank" %></td>
          <td class="text-center"><%= user.email %></td>
          <td class="text-center"><%= user.region %></td>
          <td class="text-center"><%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_user_url(user), method: :delete, remote: true, class: "delete-user" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="text-center">
    <%= paginate @users, :views_prefix => 'kaminari_bootstrap' %>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    $(".delete-user").on("ajax:complete", function(xhr, status) {
      $(this).closest("tr").remove();
    });    
  });
</script>
<% end %>