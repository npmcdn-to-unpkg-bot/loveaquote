<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-6">
      <h2 style="margin-top: 0px">Users</h2>
    </div>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="10%" class="text-center">Date</th>    
        <th width="90%" class="text-center">Email</th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="text-center"><%= user.created_at.strftime("%B %d, %Y") %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="text-center">
    <%= paginate @users, :views_prefix => 'kaminari_bootstrap' %>
  </div>
</div>