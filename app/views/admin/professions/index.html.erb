<div class="col-sm-12">
  <h2>Professions <%= link_to "add new", new_admin_profession_url, class: "btn btn-default btn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="70%" class="text-center">Name</th>
        <th width="30%" class="text-center" colspan="2">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @professions.each do |profession| %>
        <tr>
          <td><%= profession.name %></td>
          <td class="text-center"><%= link_to 'Edit', edit_admin_profession_path(profession) %></td>
          <td class="text-center"><%= link_to 'Destroy', admin_profession_path(profession), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>