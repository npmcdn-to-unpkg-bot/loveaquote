<% content_for :title, "People by Alphabet #{@alphabet}" %>
<% content_for :canonical, "#{alphabet_people_url(@alphabet)}" %>

<% content_for :content do %>
  <div class="col-xs-12">
    <h1 class="main-title text-center"><%= "People by Alphabet #{@alphabet}" %></h1>
    <div class="row">
      <% @people.each do |person| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
          <%= link_to person.name + " Quotes", person_url(person), title: person.name + " Quotes", class: "link-box text-center" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :additional_tags do %>
  <meta name="robots" content="noindex,follow">
<% end %>