<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "People" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @people.each do |letter, people| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @people.each do |letter, people| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row small-up-1 medium-up-2 large-up-3">
        <% people.each do |person| %>
          <div class="column">
            <div class="more-link text-center">
              <%= link_to person.name, person_url(person), title: person.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More ...", alphabet_people_url(letter.upcase) %>
      </div>
    </div>  
  <% end %>

<% end %>