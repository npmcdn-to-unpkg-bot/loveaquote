<% content_for :title, "LoveAQuote - The Quote Lover's Community" %>

<% content_for :description, "LoveAQuote is an amazing and extensive collection of quotes from famous authors, books, movies. Quotes are categorized into various topics for easy reference." %>

<% content_for :keywords, "quotes,quotations,proverbs,author quotes,book quotes" %>

<% content_for :canonical, root_url %>

<% content_for :content do %>
  <div class="row">
    <div class="col-sm-12">
  		<h2 class="text-center" style="margin-top: 0px">Topics<br><small>Quotes on Topics</small></h2>
		  <div class="row">
        <% @topics.each do |topic| %>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="more-link text-center">
            <%= link_to topic.name + " Quotes", topic_url(topic, format: :html), title: topic.name + " Quotes" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "#{Topic.where(very_popular: false).count} More Topics ...", topics_url %>
      </div>      
    </div>
    <div class="col-sm-12">
      <h2 class="text-center">People<br><small>Quotes by People</small></h2>
		  <div class="row">
        <% @people.each do |person| %>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="more-link text-center">
            <%= link_to person.name + " Quotes", person_url(person, format: :html), title: person.name + " Quotes" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "#{Person.where(very_popular: false).count} More People ...", people_url %>
      </div>
	 </div>
    <div class="col-sm-12">
      <h2 class="text-center">Books<br><small>Quotes from Books</small></h2>
		  <div class="row">
        <% @books.each do |book| %>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="more-link text-center">
            <%= link_to book.name + " Quotes", book_url(book, format: :html), title: book.name + " Quotes" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "#{Book.where(very_popular: false).count} More Books ...", books_url %>
      </div>
    </div>
    <div class="col-sm-12">
      <h2 class="text-center">Proverbs<br><small>Proverbs by Theme</small></h2>
  	  <div class="row">
        <% @proverbs.each do |proverb| %>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="more-link text-center">
            <%= link_to proverb.name + " Proverbs", proverb_url(proverb, format: :html), title: proverb.name + " Proverbs" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "#{Proverb.where(very_popular: false).count} More Proverb Themes ... ", proverbs_url %>
      </div>
    </div>
  </div>
<% end %>