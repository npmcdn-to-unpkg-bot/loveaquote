<% content_for :title, "LoveAQuote - The Quote Lover's Community" %>

<% content_for :description, "LoveAQuote is an amazing and extensive collection of quotes from famous authors, books, movies. Quotes are categorized into various topics for easy reference." %>

<% content_for :keywords, "quotes,quotations,proverbs,author quotes,book quotes" %>

<% content_for :canonical, root_url %>

<% content_for :content do %>
  <% if @qotd %>
    <div class="row">
      <div class="small-12 medium-10 medium-centered columns">
        <h2 class="text-center">Quote Of The Day</h2>
        <p class="text-center"><%=  @qotd.quote.text %><br><%= link_to @qotd.quote.source.name, model_url(@qotd.quote.source, format: :html), title: "#{@qotd.quote.source.name} Quotes" %></p>
      </div>
    </div>
  <% end %>

  <div class="row small-up-1 medium-up-1 large-up-2">
    <div class="column">
  		<h2 class="text-center">Topics</h2>
		  <div class="row small-up-1 medium-up-2 large-up-2">
        <% @topics.each do |topic| %>
        <div class="column">
          <div class="more-link text-center">
            <%= link_to topic.name, topic_url(topic), title: topic.name + " Quotes" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More Topics", topics_url %>
      </div>      
    </div>
    <div class="column">
      <h2 class="text-center">People</h2>
		  <div class="row small-up-1 medium-up-2 large-up-2">
        <% @people.each do |person| %>
        <div class="column">
          <div class="more-link text-center">
            <%= link_to person.name, person_url(person), title: person.name + " Quotes" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More People", people_url %>
      </div>
	 </div>
    <div class="column">
      <h2 class="text-center">Books</h2>
		  <div class="row small-up-1 medium-up-2 large-up-2">
        <% @books.each do |book| %>
        <div class="column">
          <div class="more-link text-center">
            <%= link_to book.name, book_url(book), title: book.name + " Quotes" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More Books", books_url %>
      </div>
    </div>
    <div class="column">
      <h2 class="text-center">Proverbs</h2>
  	  <div class="row small-up-1 medium-up-2 large-up-2">
        <% @proverbs.each do |proverb| %>
        <div class="column">
          <div class="more-link text-center">
            <%= link_to proverb.name, proverb_url(proverb), title: proverb.name + " Proverbs" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More Proverbs", proverbs_url %>
      </div>
    </div>
  </div>

<% end %>