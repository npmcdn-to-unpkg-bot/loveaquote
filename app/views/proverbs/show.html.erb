<%= render partial: "partials/seo", locals: {model: @proverb} %>

<% content_for :content do %>
  <main class="col-xs-12">
    <h1 class="main-title text-center"><%= "#{@proverb.name} Proverbs" %></h1>
    
    <div class="row">
      <div class="grid">    
        <% @quotes.each do |quote| %>
            <%= render partial: "partials/quote", locals: {quote: quote, context: @proverb, grid_class: "col-xs-12 col-sm-6 col-md-6 col-lg-6"} %>
        <% end %>
      </div>
    </div>
  
    <div class="text-center">
      <%= paginate @quotes, :views_prefix => 'kaminari_bootstrap' %>
    </div>
    
    <p>Last Updated - <time itemprop="dateModified" datetime="<%= @proverb.updated_at.to_datetime %>"><%= @proverb.updated_at.to_datetime.strftime("%B %d, %Y")  %></time></p>
  </main>
  
  <aside class="col-xs-12">
    <%= render "partials/facebook_like_box" %>  
    <%= render partial: "partials/aside", locals: { context: @proverb } %>    
  </aside>
  
  <%= render "partials/after_content" %>
<% end %>