<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Proverbs by Alphabet #{@alphabet}" %>

<% content_for :content do %>
  <div class="row">
    <% @proverbs.each do |proverb| %>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="more-link text-center">
          <%= link_to proverb.name + " Proverbs", proverb_url(proverb, format: :html), title: proverb.name + " Quotes" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<% content_for :additional_tags do %>
  <meta name="robots" content="noindex,follow">
<% end %>
