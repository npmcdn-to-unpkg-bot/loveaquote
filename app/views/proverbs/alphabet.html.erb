<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Proverbs by Alphabet #{@alphabet}" %>

<% content_for :content do %>
  <div class="row small-up-1 medium-up-2 large-up-3">
    <% @proverbs.each do |proverb| %>
      <div class="column text-center">
        <div class="more-link">
          <%= link_to proverb.name, proverb_url(proverb, format: :html), title: proverb.name + " Quotes" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>