<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Proverbs" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @proverbs.each do |letter, proverbs| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @proverbs.each do |letter, proverbs| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row">
        <% proverbs.each do |proverb| %>
          <div class="col-xs-1 col-sm-1 col-md-6 col-lg-4">
            <div class="more-link text-center">
              <%= link_to proverb.name, proverb_url(proverb, format: :html), title: proverb.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More ...", alphabet_proverbs_url(letter.upcase) %>
      </div>
    </div>  
  <% end %>

<% end %>