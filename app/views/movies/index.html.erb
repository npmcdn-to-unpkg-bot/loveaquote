<% content_for :title, "Movie Quotes - Read quotes from Movies" %>
<% content_for :description, "Movie Quotes - Read quotes from Movies" %>
<% content_for :canonical, "#{movies_url(format: :html)}" %>

<% content_for :content do %>
  <div class="col-xs-12">
    <h1 class="main-title text-center">Movies</h1>

    <div class="jumps text-center">
      <% @movies.each do |letter, movies| %>
        <%= link_to letter, "##{letter}" %>
      <% end %>
    </div>
    
    <% @movies.each do |letter, movies| %>
      <div class="alphabet">
        <a class="name" name="<%= letter %>"><%= letter %></a>
        <div class="row">
          <% movies.each do |movie| %>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                <%= link_to movie.name + " Quotes", movie_url(movie, format: :html), title: movie.name + " Quotes", class: "link-box text-center" %>
            </div>
          <% end %>
        </div>
        <div class="more-link text-center">
          <%= link_to "More ...", alphabet_movies_url(letter.upcase) %>
        </div>
      </div>
    <% end %>        
    
  </div>
<% end %>

<% content_for :additional_tags do %>
  <meta name="robots" content="noindex,follow">
<% end %>