<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Movies" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @movies.each do |letter, movies| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @movies.each do |letter, movies| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row small-up-1 medium-up-2 large-up-3">
        <% movies.each do |movie| %>
          <div class="column text-center">
            <div class="more-link">
              <%= link_to movie.name, movie_url(movie), title: movie.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="more-link">
        <%= link_to "More ...", alphabet_movies_url(letter.upcase) %>
      </div>
    </div>  
  <% end %>

<% end %>