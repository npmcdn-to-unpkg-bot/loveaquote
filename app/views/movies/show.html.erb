<% if params.has_key?(:page) %>
  <% content_for :canonical, "#{canonical_url(@movie, params[:page], format: :html)}" %>
  <% content_for :title, "#{@movie.name} Quotes - #{@movie.quotes.count.to_s} quotes - Page #{params[:page]}" %>
  <% content_for :description, "Quotes from #{@movie.name} - page #{params[:page]}. Best collection of #{@movie.name} quotes. Read, comment and share these quotes." %>
<% else %>
  <% content_for :canonical, "#{canonical_url(@movie, format: :html)}" %>
  <% content_for :title, "#{@movie.name} Quotes - #{@movie.quotes.count.to_s} quotes" %>
  <% content_for :description, "Quotes from #{@movie.name}. Best collection of #{@movie.name} quotes. Read, comment and share these quotes." %>
<% end %>

<% content_for :heading, "#{@movie.name} Quotes" %>

<% if @movie.social_image.present? %>
  <% content_for :facebook_image, @movie.social_image.facebook %>
<% end %>

<% content_for :breadcrumbs do %>
	<ul class="breadcrumbs">
    <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="<%= root_url %>" itemprop="url"><span itemprop="title">Home</span></a></li>
    <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="<%= movies_url(format: :html) %>" itemprop="url"><span itemprop="title">Movies</span></a></li>
    <li itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><span itemprop="title"><%= @movie.name %></span></li>
  </ul>
<% end %>

<% content_for :content do %>
  <ul itemscope itemtype="http://schema.org/ItemList">
    <% @quotes.each do |quote| %>
      <%= render partial: "movies/quote", object: quote %>
    <% end %>
  </ul>

  <div class="text-center">
    <%= paginate @quotes, :views_prefix => 'kaminari_foundation' %>
  </div>
<% end %>

<% content_for :comments do %>
  <div class="fb-comments" data-href="<%= movie_url(@movie) %>" data-numposts="10" data-colorscheme="light" data-width="100%"></div>
<% end %>

<% content_for :updated do %>
  Last Updated - <time itemprop="dateModified" datetime="<%= @movie.updated_at.to_datetime %>"><%= @movie.updated_at.to_datetime.strftime("%B %d, %Y")  %></time>
<% end %>

<% content_for :social_sharing do %>
    <a rel="nofollow" class="share-movie-twitter" title="<%= "Share #{@movie.name} quotes on Twitter" %>" target="_blank" href="<%= twitter_movie_url(@movie) %>"><%= image_tag('social/twitter.png') %></a>
    <a rel="nofollow" class="share-movie-facebook" title="<%= "Share #{@movie.name} quotes on Facebook" %>" target="_blank" href="<%= facebook_movie_url(@movie) %>"><%= image_tag('social/facebook.png') %></a>
    <% if @movie.image.present? %>
      <a rel="nofollow" class="share-movie-pinterest" title="<%= "Share #{@movie.name} quotes on Pinterest" %>" target="_blank" href="<%= pinterest_movie_url(@movie) %>"><%= image_tag('social/pinterest.png') %></a>
    <% end %>
<% end %>

<% content_for :search_form do %>
  <%= form_tag search_movie_url(@movie, format: :html), method: :get do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: "input-group-field small" %>
      <div class="input-group-button">
        <%= submit_tag "Search", class: "button small secondary" %>
      </div>
    </div>
  <% end %>
<% end %>

<% content_for :aside do %>
  <%= render partial: "partials/facebook_like_box" %>
  <%= render partial: "partials/character_quotes", locals: {model: @movie} %>
<% end %>