<div class="col-xs-9">
  <h2>My Lists <%= link_to "add new", new_my_list_url, class: "btn btn-default btn-sm" %></h2>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th width="70%" class="text-center">Name</th>
        <th width="30%" class="text-center" colspan="2">Manage</th>
      </tr>
    </thead>
  
    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td class="text-center"><%= link_to 'Edit', edit_my_list_url(list) %></td>
          <td class="text-center"><%= link_to 'Destroy', my_list_url(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  