<% cache "time-line-count-#{TimeLine.cached_count}" do %>
	<div class="row footer-widgets">
		<div class="small-12 medium-12 large-4 columns">
			<section class="about">
				<h4>About LoveAQuote</h4>
				<div class="social-links">
					<%= link_to Setting.facebook_url, target: "_blank"  do %>
						<%= image_tag('social/facebook.png', :size=>"32x32", :alt => "Follow LoveAQuote on Facebook") %>
					<% end %>

					<%= link_to Setting.twitter_url, target: "_blank"  do %>
						<%= image_tag('social/twitter.png', :size=>"32x32", :alt => "Follow LoveAQuote on Twitter") %>
					<% end %>

					<%= link_to Setting.pinterest_url, target: "_blank"  do %>
						<%= image_tag('social/pinterest.png', :size=>"32x32", :alt => "Follow LoveAQuote on Pinterest") %>
					<% end %>
				</div>
			</section>
		</div>
		<div class="small-12 medium-12 large-4 columns">
			<section class="recent-posts">
				<h4>Recently Added</h4>
				<ul class="list-unstyled">
					<% TimeLine.recent.each do |recent| %>
						<li>
							<% if recent.item.class.name == "Proverb" %>
								<%= link_to recent.item.name + " Proverbs", model_url(recent.item), title: recent.item.name + " Proverbs" %>
							<% else %>
								<%= link_to recent.item.name + " Quotes", model_url(recent.item), title: recent.item.name + " Quotes" %>
							<% end %>
						</li>
					<% end %>
				</ul>
			</section>
		</div>
		<div class="small-12 medium-12 large-4 columns">
			<section class="footer-logo">
				<a href="<%= root_url %>"><%= image_tag('logo_256.png', size: "128x128") %></a>
			</section>
		</div>
	</div>
<% end %>