<header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="navbar-brand">
            <%= link_to root_url do %>
                <%= image_tag "logo.png", class: "logo" %>
            <% end %>
        </div>
        <ul class="navbar-nav">
            <% unless current_admin %>
                <li><%= link_to "Home", root_url %></li>
                <li><%= link_to "Topics", topics_url %></li>
                <li><%= link_to "People", people_url %></li>
                <li><%= link_to "Books", books_url %></li>
                <li><%= link_to "Proverbs", proverbs_url %></li>
            <% end %>
            
            <% if current_admin %>
                <li><%= link_to '<i class="e-icon-layout"></i><span class="title">Dashboard</span>'.html_safe, admin_root_url %></li>
                <li class="has-sub root-level">
                    <a href="#"><i class="e-icon-plus"></i><span class="title">Add new</span></a>
                    <ul>
                        <li><%= link_to "Person", new_admin_person_url %></li>
                        <li><%= link_to "Book", new_admin_book_url %></li>
                        <li><%= link_to "Topic", new_admin_topic_url %></li>
                        <li><%= link_to "Movie", new_admin_movie_url %></li>
                        <li><%= link_to "Tv Show", new_admin_tv_show_url %></li>
                        <li><%= link_to "Character", new_admin_character_url %></li>
                        <li><%= link_to "Nationality", new_admin_nationality_url %></li>
                        <li><%= link_to "Profession", new_admin_profession_url %></li>
                    </ul>
                </li>
            <% end %>
        </ul>
        
        <ul class="nav navbar-right pull-right">
            <% if current_admin %>
            <% if User.unread.any? %>
                <li class="notifications dropdown"><%= link_to ('<i class="e-icon-users"></i><span class="badge badge-secondary">' + User.unread.count.to_s + '</span>').html_safe, admin_users_url %></li>
            <% else %>
                <li><%= link_to '<i class="e-icon-users"></i>'.html_safe, admin_users_url %></li>            
            <% end %>
            <% if Subscriber.unread.any? %>
                <li class="notifications dropdown"><%= link_to ('<i class="e-icon-rocket"></i><span class="badge badge-secondary">' + Subscriber.unread.count.to_s + '</span>').html_safe, admin_subscribers_url %></li>
            <% else %>
                <li><%= link_to '<i class="e-icon-rocket"></i>'.html_safe, admin_subscribers_url %></li>            
            <% end %>            
            <% if Message.unread.any? %>
                <li class="notifications dropdown"><%= link_to ('<i class="e-icon-mail"></i><span class="badge badge-secondary">' + Message.unread.count.to_s + '</span>').html_safe, admin_messages_url %></li>
            <% else %>
                <li><%= link_to '<i class="e-icon-mail"></i>'.html_safe, admin_messages_url %></li>
            <% end %>
            <li><%= link_to '<i class="e-icon-database"></i>'.html_safe, admin_logs_url %></li>
            <li><%= link_to '<i class="e-icon-cog"></i>'.html_safe, admin_settings_url %></li>
            <li><%= link_to '<i class="e-icon-logout"></i>'.html_safe, destroy_admin_session_path, method:"delete" %></li>            
            <% end %>
            <li class="visible-xs"> <div class="horizontal-mobile-menu visible-xs"> <a href="#" class="with-animation"><i class="e-icon-list"></i> </a> </div> </li>            
        </ul>
        
    </div>
</header>