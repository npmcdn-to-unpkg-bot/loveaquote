<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Books by Alphabet #{@alphabet}" %>

<% content_for :content do %>
  <div class="row small-up-1 medium-up-2 large-up-3">
    <% @books.each do |book| %>
      <div class="column text-center">
        <div class="more-link">
          <%= link_to book.name, book_url(book), title: book.name + " Quotes" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>