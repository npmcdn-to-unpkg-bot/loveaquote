<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Books" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @books.each do |letter, books| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @books.each do |letter, books| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row">
        <% books.each do |book| %>
          <div class="col-xs-1 col-sm-1 col-md-6 col-lg-4">
            <div class="more-link text-center">
              <%= link_to book.name, book_url(book, format: :html), title: book.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="more-link text-center">
        <%= link_to "More ...", alphabet_books_url(letter.upcase) %>
      </div>
    </div>
  <% end %>
<% end %>