<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Books" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @books.each do |letter, books| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @books.each do |letter, books| %>
    <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <% first = books.count / 3 + books.count % 3 %>
      <% second = first + books.count / 3 %>
      <% third =  second + books.count / 3 %>
      <div class="row">
        <div class="col-md-4">
          <ul>
            <% ( 1..first ).each do |count| %>
              <li><%= link_to books[count-1].name, book_url(books[count-1]), title: books[count-1].name + " Quotes" %></li>
            <% end %>
          </ul>
        </div>
        <div class="col-md-4">
          <ul>
            <% ( ( first + 1 )..second ).each do |count| %>
              <li><%= link_to books[count-1].name, book_url(books[count-1]), title: books[count-1].name + " Quotes"%></li>
            <% end %>
          </ul>
        </div>
        <div class="col-md-4">
          <ul>
            <% ( ( second+1 )..third ).each do |count| %>
              <li><%= link_to books[count-1].name, book_url(books[count-1]), title: books[count-1].name + " Quotes" %></li>
            <% end %>
          </ul>
        </div>

        <div class="col-md-12">
          <ul>
            <li><%= link_to "More ...", alphabet_books_url(letter.upcase) %></li>
          </ul>
        </div>

      </div>
    </div>
  <% end %>

<% end %>