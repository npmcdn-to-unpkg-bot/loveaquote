<% if params.has_key?(:page) %>
  <% content_for :canonical, "#{canonical_url(@tv_show, params[:page], format: :html)}" %>
  <% content_for :title, "#{@tv_show.name} Quotes - #{@tv_show.quotes.count.to_s} quotes - Page #{params[:page]}" %>
  <% content_for :description, "Quotes from #{@tv_show.name} - page #{params[:page]}. Best collection of #{@tv_show.name} quotes. Read, comment and share these quotes." %>
<% else %>
  <% content_for :canonical, "#{canonical_url(@tv_show, format: :html)}" %>
  <% content_for :title, "#{@tv_show.name} Quotes - #{@tv_show.quotes.count.to_s} quotes" %>
  <% content_for :description, "Quotes from #{@tv_show.name}. Best collection of #{@tv_show.name} quotes. Read, comment and share these quotes." %>
<% end %>

<% content_for :heading, "#{@tv_show.name} Quotes" %>

<% if @tv_show.social_image.present? %>
  <% content_for :facebook_image, @tv_show.social_image.facebook %>
<% end %>

<% content_for :breadcrumbs do %>
	<ol class="breadcrumb">
    <li><a href="<%= root_url %>">Home</a></li>
    <li><a href="<%= tv_shows_url(format: :html) %>">Tv Shows</a></li>
    <li><%= @tv_show.name + " Quotes" %></li>
  </ol>
<% end %>

<% content_for :content do %>
  <% @quotes.each do |quote| %>
    <%= render partial: "tv_shows/quote", object: quote %>
  <% end %>

  <div class="text-center">
    <%= paginate @quotes, :views_prefix => 'kaminari_bootstrap' %>
  </div>
<% end %>

<% content_for :updated do %>
  Last Updated - <time itemprop="dateModified" datetime="<%= @tv_show.updated_at.to_datetime %>"><%= @tv_show.updated_at.to_datetime.strftime("%B %d, %Y")  %></time>
<% end %>

<% content_for :social_sharing do %>
    <a rel="nofollow" class="share-tv-show-twitter" title="<%= "Share #{@tv_show.name} quotes on Twitter" %>" target="_blank" href="<%= twitter_tv_show_url(@tv_show) %>"><%= image_tag('social/twitter.png') %></a>
    <a rel="nofollow" class="share-tv-show-facebook" title="<%= "Share #{@tv_show.name} quotes on Facebook" %>" target="_blank" href="<%= facebook_tv_show_url(@tv_show) %>"><%= image_tag('social/facebook.png') %></a>
    <% if @tv_show.image.present? %>
      <a rel="nofollow" class="share-tv-show-pinterest" title="<%= "Share #{@tv_show.name} quotes on Pinterest" %>" target="_blank" href="<%= pinterest_tv_show_url(@tv_show) %>"><%= image_tag('social/pinterest.png') %></a>
    <% end %>
<% end %>

<% content_for :aside do %>
  <%= render partial: "partials/character_quotes", locals: {model: @tv_show} %>
<% end %>