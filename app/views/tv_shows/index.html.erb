<% content_for :title, @title %>

<% content_for :canonical, @canonical %>

<% content_for :heading, "Tv Shows" %>

<% content_for :content do %>

  <div class="row jumps text-center">
    <% @tv_shows.each do |letter, tv_shows| %>
      <%= link_to letter, "##{letter}" %>
    <% end %>
  </div>


  <% @tv_shows.each do |letter, tv_shows| %>
     <div class="alphabet">
      <a class="name" name="<%= letter %>"><%= letter %></a>
      <div class="row small-up-1 medium-up-2 large-up-3">
        <% tv_shows.each do |tv_show| %>
          <div class="column">
            <div class="more-link text-center">
              <%= link_to tv_show.name + " Quotes", tv_show_url(tv_show, format: :html), title: tv_show.name + " Quotes" %>
            </div>
          </div>
        <% end %>
      </div>  
      <div class="more-link text-center">
        <%= link_to "More ...", alphabet_tv_shows_url(letter.upcase) %>
      </div>
    </div>  
  <% end %>

<% end %>