<% if params.has_key?(:page) %>
  <% content_for :canonical, "#{canonical_url(model, params[:page])}" %>
  <% content_for :title, "#{model.title} - Page #{params[:page]}"  %>
  <% content_for :description, model.description %>
  <% if model.social_image.present? && model.social_image.facebook.present? %>
    <% content_for :facebook_image, model.social_image.facebook %>
  <% end %>  
<% else %>
  <% content_for :canonical, "#{canonical_url(model)}" %>
  <% content_for :title, model.title  %>
  <% content_for :description, model.description %>
  <% if model.social_image.present? && model.social_image.facebook.present? %>
    <% content_for :facebook_image, model.social_image.facebook %>
  <% end %>  
<% end %>
