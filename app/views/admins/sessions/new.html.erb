<div class="login-form">
  <div class="login-content">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"> <i class="e-icon-user"></i> </div>
            <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: "Email", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"> <i class="e-icon-key"></i> </div>
            <%= f.input_field :password, required: false, label: false, placeholder: "Password", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <div class="form-group">
          <%= f.button :button, '<i class="e-icon-login"></i> Log in'.html_safe, class: "btn btn-primary btn-block btn-login" %>
        </div>
      </div>
    <% end %>
  </div>
</div>